<idea-plugin>
    <id>org.kth.plugins.json-matcher</id>
    <name>Json Matcher</name>
    <vendor>nextree</vendor>
    <description>
        <![CDATA[
      Makes Json pretty and makes MATCHER suitable for AMIS.
    ]]>
    </description>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.database</depends>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="JsonMatcher" anchor="right" factoryClass="org.kth.plugins.JsonMatcherAction" icon="AllIcons.Actions.DiffWithClipboard"/>
        <toolWindow id="FileComparer" anchor="right" factoryClass="org.kth.plugins.CompareFilesAction" icon="AllIcons.ObjectBrowser.AbbreviatePackageNames"/>
    </extensions>
</idea-plugin>