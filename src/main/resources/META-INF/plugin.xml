<idea-plugin>
    <id>org.kth.plugins.json-matcher</id>
    <name>Json Matcher</name>
    <vendor url="https://github.com/kth9916/jsonmatcher">thkim</vendor>
    <description>
        <![CDATA[
      This plugin is dedicated to AMIS development.

        - It prettifies JSON by default.
        - It enhances development convenience by converting RECORD values to match their HEADERS.
        - It compares JSON files and highlights the differences between them.
    ]]>
    </description>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <idea-version since-build="241" until-build="253.*"/>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="JsonMatcher" anchor="right" factoryClass="org.kth.plugins.JsonMatcherAction" icon="/icons/matcher.svg"/>
        <toolWindow id="FileComparer" anchor="right" factoryClass="org.kth.plugins.CompareFilesAction" icon="/icons/compare.svg"/>
    </extensions>
</idea-plugin>
